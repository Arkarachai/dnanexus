{
  "name": "variant_annotator",
  "title": "GATK VariantAnnotator",
  "summary": "Annotate a VCF file using GATK VariantAnnotator",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "Variation Calling"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index File",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.tbi"
      ]
    },
    {
      "name" : "no_geno",
      "label" : "Suppress all samples VCF",
      "class" : "boolean",
      "optional" : false,
      "default" : false
    },
    {
      "name": "hdr_only",
      "label": "Output Sites-only VCF",
      "class": "boolean",
      "optional": false,
      "default" : true
    },
    {
      "name": "cmd_params",
      "label": "VariantAnnotator Parameters",
      "class": "string",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "vcf_out",
      "label": "Filtered VCF file",
      "class": "array:file",
      "optional" : true,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_out",
      "label": "Filtered VCF Index file",
      "class": "array:file",
      "optional" : true,
      "patterns": [
        "*.tbi"
      ]
    },
    {
      "name": "vcf_hdr_out",
      "label": "Filtered VCF Sites-only file",
      "class": "array:file",
      "optional" : true,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_hdr_out",
      "label": "Filtered VCF Sites-only Index file",
      "class": "array:file",
      "optional" : true,
      "patterns": [
        "*.tbi"
      ]
    },
    {
      "group": "Build Options",
      "name": "build_version",
      "label": "NCBI Build Version",
      "class": "string",
      "choices": ["b38","b37_decoy"],
      "default": "b37_decoy",
      "optional": true
    }
  ],
  "runSpec": {
  "execDepends": [
      {
        "name": "pigz"
      },
      {
        "name": "tabix"
      }
    ],
    "interpreter": "bash",
    "file": "src/variant_annotator.sh"
  },
  "resources" : "project-BYpFk1Q0pB0xzQY8ZxgJFv1V",
  "access": {
    "network": [
      "*"
    ],
     "allProjects": "VIEW"
  },
  "developers": ["user-tnperson", "user-auv13"],
  "openSource" : true,
  "authorizedUsers" : ["org-geisinger_affiliate", "org-geisinger", "org-support", "user-codushlaine", "user-semanti.mukherjee", "user-alexander.li", "user-shannon.bruse", "user-jan.freudenberg", "user-crisvh"]
}

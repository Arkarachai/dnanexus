{
  "name": "select_variants",
  "title": "Subset VCF",
  "summary": "Apply Sample / Variant level subsetting to VCF",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "Variation Calling"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index File",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.tbi"
      ]
    },
    {
      "name": "samp_incl",
      "label" : "File of samples to include (one per line)",
      "optional" : true,
      "class" : "file"
    },
    {
      "name": "samp_excl",
      "label" : "File of samples to exclude (one per line)",
      "optional" : true,
      "class" : "file"
    },
    {
      "name": "region_file",
      "label": "File of regions to include (compaible with GATK)",
      "optional" : true,
      "class" : "file"
    },
    {
      "name": "concord_vcf",
      "label": "VCF File of variants to extract from input",
      "class" : "file",
      "optional": true,
      "patterns" : [
      	"*.vcf.gz", "*.vcf" ]
    },
    {
      "name": "env",
      "label": "Exclude Non-Variant?",
      "class": "boolean",
      "optional": true,
      "default": true
    },
    {
      "name": "ef",
      "label": "Exclude Filtered Sites?",
      "class": "boolean",
      "optional": true,
      "default": false
    },
    {
      "name": "EXTRA_CMD",
      "label": "Additional Command Line parameters to SelectVariants",
      "class": "string",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "vcf_out",
      "label": "Filtered VCF file",
      "class": "array:file"
    },
    {
      "name": "vcfidx_out",
      "label": "Filtered VCF Index file",
      "class": "array:file"
    }
  ],
  "runSpec": {
  "execDepends": [
      {
        "name": "pigz"
      },
      {
        "name": "openjdk-7-jre-headless"
      },
      {
        "name": "tabix"
      }
    ],
    "interpreter": "bash",
    "file": "src/select_variants.sh"
  },
  "resources" : "project-BYpFk1Q0pB0xzQY8ZxgJFv1V",
  "access": {
    "network": [
      "*"
    ],
     "allProjects": "VIEW"
  },

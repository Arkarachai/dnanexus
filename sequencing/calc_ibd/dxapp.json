{
  "name": "calc_ibd",
  "title": "Calculate IBD from VCF or PLINK file",
  "summary": "calc_ibd",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "Variation Calling",
    "Statistics"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.vcf.gz.tbi"
      ]
    },
    {
      "name": "bed_fn",
      "label": "BED File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.bed"
      ]
    },
    {
      "name": "bim_fn",
      "label": "BIM File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.bim"
      ]
    },
    {
      "name": "fam_fn",
      "label": "FAM File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.fam"
      ]
    },
    {
      "name": "prefix",
      "label": "Prefix for files",
      "class": "string",
      "optional": true,
      "default": "VCF_PLINK"
    },
    {
      "name": "maf",
      "label": "Minimum MAF",
      "class": "float",
      "optional": false,
      "default" : 0.05
    },    
    {
      "name": "excl_region",
      "label": "Exclusion Region(s)",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "sel_args",
      "label": "PLINK Marker selection arguments",
      "class": "string",
      "optional": true,
      "default": ""
    },
    {
      "name": "ld_args",
      "label": "PLINK LD pruning arguments",
      "class": "string",
      "optional": true,
      "default": "--indep-pairwise 50 5 0.5"
    },
    {
      "name": "merge_args",
      "label" : "PLINK Merge arguments (sample drop goes here)",
      "class" : "string",
      "optional" : true,
      "default" : ""
    }
  ],
  "outputSpec": [
    {
      "name": "ibd_out",
      "label": "PLINK IBD file",
      "class": "file"
    },
    {
      "name": "samp_excl",
      "label": "Samples Excluded",
      "class": "file",
      "optional" : true
    }
  ],
  "runSpec": {
    "execDepends": [
      {"name": "libgsl0ldbl"},
      {"name": "pigz"},
      {"name": "openjdk-7-jre-headless"},
      {"name": "tabix"}
    ],
    "interpreter": "bash",
    "file": "src/calc_ibd.sh"
  },
  "resources" : "project-BYpFk1Q0pB0xzQY8ZxgJFv1V",

{
  "name": "cat_variants",
  "title": "GATK CatVariants",
  "summary": "Run GATK CatVariants (with sorting enabled)",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "Variation Calling"
  ],
  "inputSpec": [
    {
      "name": "vcfs",
      "label": "VCF Files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidxs",
      "label": "VCF Index Files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.tbi"
      ]
    },
    {
      "name" : "use_gatk",
      "label" : "Use GATK CatVariants (alt: custom script, NOTE: Custom script in beta and may not function properly)",
      "class": "boolean",
      "optional" : false,
      "default" : true
    },
    {
      "name": "prefix",
      "label": "Prefix",
      "class": "string",
      "optional": true
    },
    {
      "group": "Build Options",
      "name": "build_version",
      "label": "NCBI Build Version",
      "class": "string",
      "choices": ["b38","b37_decoy"],
      "default": "b38",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "vcf_out",
      "label": "Combined VCF",
      "class": "file",
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_out",
      "label": "Combined VCF Index File",
      "class": "file",
      "patterns": [
        "*.tbi"
      ]
    }
  ],
  "runSpec": {
  "execDepends": [
      {
        "name": "pigz"
      },
      {
        "name": "parallel"
      },
      {
        "name": "tabix"
      },
      {
      	"name": "vcftools"
      }
    ],
    "systemRequirements": {
      "*": {
        "instanceType": "mem1_ssd2_x8"
      }
    },
    "distribution": "Ubuntu",
    "release": "14.04",
    "interpreter": "bash",
    "file": "src/cat_variants.sh"
  },

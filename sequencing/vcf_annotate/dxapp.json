{
  "name": "vcf_annotate",
  "title": "Annotate VCF File",
  "summary": "Use a variety of tools to annotate a sites-only VCF",
  "dxapi": "1.0.0",
  "version": "0.0.4",
  "categories": [
    "Variation Calling"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File",
      "class": "file",
      "optional": false,
      "patterns" : ["*.vcf", "*.vcf.gz"]
    },
    {
      "name": "prefix",
      "label": "PREFIX for VCF file",
      "class": "string",
      "optional": true
    },
    {
      "name": "snpeff",
      "label": "Run SnpEff (4.1l)",
      "class": "boolean",
      "optional": false,
      "default" : true
    },
    {
      "name": "sift",
      "label": "Run SIFT (5.2.2)",
      "class": "boolean",
      "optional": false,
      "default" : true
    },
    {
      "name": "dbnsfp",
      "label": "Run dbNSFP (2.9)",
      "class": "boolean",
      "optional": false,
      "default" : true
    },
    {
      "name" : "clinvar",
      "label" : "Use CLINVAR",
      "class" : "boolean",
      "optional" : false,
      "default" : true
    }
  ],
  "outputSpec": [
    {
      "name": "vcf_out",
      "label": "Annotated VCF",
      "class": "file"
    },
    {
      "name": "vcfidx_out",
      "label": "Annotated VCF Index",
      "class": "file"
    }
  ],
  "runSpec": {
    "execDepends": [
      {"name": "pigz"},
      {"name": "openjdk-7-jre-headless"},
      {"name": "tabix"},
      {"name": "vcftools"},
      {"name": "libtie-ixhash-perl"},
      {"name": "libdbi-perl"},
      {"name": "libfile-util-perl"},
      {"name": "perl-doc"},
      {"name": "libdbd-sqlite3-perl"},
      {"name": "libxml-simple-perl"}
    ],  
    "interpreter": "bash",
    "file": "src/vcf_annotate.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "resources" : "project-BYpFk1Q0pB0xzQY8ZxgJFv1V",
  "openSource" : true,

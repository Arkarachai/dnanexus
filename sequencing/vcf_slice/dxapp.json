{
  "name": "vcf_slice",
  "title": "Slice VCF File(s)",
  "summary": "vcf_slice",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "Variation Calling"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF Files",
      "class": "array:file",
      "optional": false,
      "patterns" : ["*.vcf.gz"]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index Files",
      "class": "array:file",
      "optional": false,
      "patterns" : ["*.vcf.gz.tbi"]
    },
    {
      "name": "region_fn",
      "label": "File of regions (chr:start-stop)",
      "class": "file",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "vcf_out",
      "label": "Sliced VCF Files",
      "class": "array:file"

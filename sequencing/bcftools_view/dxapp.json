{
  "name": "bcftools_view",
  "title": "BCFTools View",
  "summary": "Run the bcftools view command",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "Variation Calling"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index File",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.tbi"
      ]
    },
    {
      "name": "samp_incl",
      "label" : "File of samples to include (one per line)",
      "optional" : true,
      "class" : "file"
    },
    {
      "name": "samp_excl",
      "label" : "File of samples to exclude (one per line)",
      "optional" : true,
      "class" : "file"
    },
    {
      "name": "region_file",
      "label": "File of regions to include (1-based, compatible with bcftools)",
      "optional" : true,
      "class" : "file"
    },
    {
      "name" : "merge",
      "label" : "Merge Output?",
      "class" : "boolean",
      "optional" : true,
      "default" : true
    },
    {
      "name" : "headers",
      "label" : "Also output sites-only?",
      "class" : "boolean",
      "optional" : true,
      "default" : false
    },
    {
      "name": "EXTRA_CMD",
      "label": "bcftools view command line options",
      "class": "string",
      "optional": true
	}
  ],
  "outputSpec": [
    {
      "name": "vcf_out",
      "label": "Filtered VCF file",
      "class": "array:file"
    },
    {
      "name": "vcfidx_out",
      "label": "Filtered VCF Index file",
      "class": "array:file"
    },
    {
      "name": "vcf_hdr_out",
      "label": "Filtered VCF sites-only file",
      "class": "array:file",
      "optional" : true
    },
    {
      "name": "vcfidx_hdr_out",
      "label": "Filtered VCF sites-only Index file",
      "class": "array:file",
      "optional" : true
    }
  ],
  "runSpec": {
  "execDepends": [
      {"name": "pigz"},
      {"name": "openjdk-7-jre-headless"},
      {"name": "tabix"},
      {"name": "vcftools"}
    ],
    "interpreter": "bash",
    "file": "src/bcftools_view.sh"
  },
  "resources" : "project-BYpFk1Q0pB0xzQY8ZxgJFv1V",
  "access": {
    "network": [
      "*"
    ],
     "allProjects": "VIEW"
  },

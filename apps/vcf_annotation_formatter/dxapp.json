{
  "name": "vcf_annotation_formatter",
  "title": "VCF Annotation Formatter",
  "summary": "Extracts and reformats VCF annotations",
  "dxapi": "1.0.0",
  "version": "0.1.0",
  "categories": [],
  "access": {
    "network": [ "*" ],
    "allProjects": "VIEW"
  },
  "inputSpec": [
    {
      "name": "vcf_file",
      "label": "VCF File",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf","*.vcf.gz"]
    },
    {
      "name": "position_file",
      "label": "Position Filter",
      "class": "file",
      "optional": true,
      "patterns": ["*.pos*"]
    },
    {
      "name": "region_file",
      "label": "Region Filter",
      "class": "file",
      "optional": true,
      "patterns": ["*.reg*"]
    },
    {
      "name": "gene_file",
      "label": "Gene Filter",
      "class": "file",
      "optional": true,
      "patterns": ["*.gen*"]
    },
    {
      "name": "prefix",
      "label": "Output Filename Prefix",
      "class": "string",
      "default": "vcf_anno_format"
    },
    {
      "name": "annotations",
      "label": "Annotation Types",
      "class": "array:string",
      "choices": ["CLINVAR", "dbNSFP", "SIFT", "SNPEff"],
      "default": ["CLINVAR", "dbNSFP", "SIFT", "SNPEff"]
    },
    {
      "name": "extra",
      "label": "Extra Annotations Column",
      "class": "boolean",
      "default": false
    }
  ],
  "outputSpec": [
    {
      "name": "annotation_files",
      "label": "Formatted Annotations",
      "class": "array:file",
      "optional": true
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/main.sh"
  },
  "authorizedUsers": ["org-geisinger_affiliate", "org-geisinger"]
}
